{
  "language": "Kiswahili",
  "grammar_rules": [
    {
      "rule": "Noun Classes (Ngeli)",
      "description": "Kiswahili nouns are grouped into classes that determine agreement patterns",
      "examples": [
        "M-WA class: mtu (person) → watu (people)",
        "KI-VI class: kitabu (book) → vitabu (books)",
        "N-N class: nyumba (house) → nyumba (houses)"
      ]
    },
    {
      "rule": "Verb Conjugation",
      "description": "Verbs use prefixes for subject, tense, and object markers",
      "examples": [
        "Ninasoma (I am reading) = Ni-na-soma",
        "Alipenda (He/she loved) = A-li-penda",
        "Tutaenda (We will go) = Tu-ta-enda"
      ]
    },
    {
      "rule": "Adjective Agreement",
      "description": "Adjectives must agree with their nouns in class",
      "examples": [
        "mtu mzuri (good person) - M-WA class",
        "kitabu kizuri (good book) - KI-VI class",
        "nyumba nzuri (good house) - N-N class"
      ]
    }
  ],
