        ]
      },
      "somo": {
        "meaning": "to read/study",
        "pos": "verb",
        "conjugations": {
          "present": "asomo (I read)",
          "past": "ne asomo (I read)",
          "future": "abiro somo (I will read)"
        },
        "examples": [
          "Asomo kitabu (I am reading a book)",
          "Nyithindo somo e skul (Children study at school)"
        ]
      },
      "ber": {
        "meaning": "good/beautiful",
        "pos": "adjective",
        "examples": [
          "Dhano maber (good person)",
