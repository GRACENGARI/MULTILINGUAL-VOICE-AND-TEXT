{
  "language": "Luo",
  "grammar_rules": [
    {
      "rule": "Verb Conjugation",
      "description": "Luo verbs change based on tense, aspect, and subject agreement",
      "examples": [
        "Asomo (I read/study)",
        "Ne asomo (I was reading)",
        "Abiro somo (I will read)"
      ]
    },
    {
      "rule": "Noun Classes",
      "description": "Luo nouns have different patterns for singular and plural",
      "examples": [
        "dhano (person) → ji (people)",
        "ot (house) → udi (houses)",
        "wuok (child) → nyithindo (children)"
      ]
    },
    {
      "rule": "Word Order",
      "description": "Luo typically follows VSO (Verb-Subject-Object) order",
      "examples": [
        "Asomo kitabu (I read book) - A-somo kitabu",
        "Odhi skul nyathi (Goes to school child) - Child goes to school"
      ]
    }
  ],
  "vocabulary": {
